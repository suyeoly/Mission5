@{
    ViewData["Title"] = "Privacy Policy";
}
<div class="container">
    <h1>Tutoring Service Calculator</h1>
    <form>
        <div class="form-group">
            <label for="hours">Number of Hours:</label>
            <input type="number" id="hours" class="form-control" placeholder="Enter hours">
        </div>
        <div class="form-group">
            <label for="rate">Hourly Rate ($):</label>
            <input type="text" id="rate" class="form-control" value="30" readonly>
        </div>
        <br />
        <button type="button" id="calculate" class="btn btn-primary">Calculate Total</button>
    </form>
    <br />
    <div class="form-group">
        <label for="total">Total Cost ($):</label>
        <input type="text" id="total" class="form-control" readonly>
    </div>
</div>